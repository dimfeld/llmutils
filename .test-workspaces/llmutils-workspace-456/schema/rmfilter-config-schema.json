{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/RmfilterConfig",
  "definitions": {
    "RmfilterConfig": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "edit-format": {
          "type": "string",
          "enum": [
            "whole-xml",
            "diff",
            "diff-orig",
            "diff-fenced",
            "udiff-simple",
            "whole",
            "none"
          ]
        },
        "output": {
          "type": "string"
        },
        "copy": {
          "type": "boolean"
        },
        "quiet": {
          "type": "boolean"
        },
        "cwd": {
          "type": "string"
        },
        "gitroot": {
          "type": "boolean"
        },
        "debug": {
          "type": "boolean"
        },
        "instructions": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "instruction": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "docs": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "rules": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "omit-cursorrules": {
          "type": "boolean"
        },
        "omit-instructions-tag": {
          "type": "boolean"
        },
        "with-diff": {
          "type": "boolean"
        },
        "no-autodocs": {
          "type": "boolean",
          "description": "Disable automatic loading of .mdc rule/doc files"
        },
        "diff-from": {
          "type": "string"
        },
        "instructions-editor": {
          "type": "boolean"
        },
        "omit-top-instructions": {
          "type": "boolean",
          "description": "Omit instructions from the start of the prompt"
        },
        "bare": {
          "type": "boolean"
        },
        "compress": {
          "type": "boolean"
        },
        "commands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "base": {
                "type": "string",
                "description": "Base directory for globs for this command"
              },
              "globs": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "grep": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "ignore": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "whole-word": {
                "type": "boolean"
              },
              "expand": {
                "type": "boolean"
              },
              "no-expand-pages": {
                "type": "boolean"
              },
              "no-expand-tests": {
                "type": "boolean"
              },
              "with-imports": {
                "type": "boolean"
              },
              "with-all-imports": {
                "type": "boolean"
              },
              "with-importers": {
                "type": "boolean"
              },
              "changed-files": {
                "type": "boolean"
              },
              "upstream": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "downstream": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "largest": {
                "type": "string"
              },
              "example": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "description": "rmfilter configuration file"
    }
  }
}
