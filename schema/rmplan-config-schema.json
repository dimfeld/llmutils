{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/RmplanConfig",
  "definitions": {
    "RmplanConfig": {
      "type": "object",
      "properties": {
        "postApplyCommands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "workingDirectory": {
                "type": "string"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "allowFailure": {
                "type": "boolean",
                "default": false
              },
              "hideOutputOnSuccess": {
                "type": "boolean",
                "default": false
              }
            },
            "required": [
              "title",
              "command"
            ],
            "additionalProperties": false
          }
        },
        "paths": {
          "type": "object",
          "properties": {
            "tasks": {
              "type": "string",
              "description": "Path to directory containing task definitions"
            },
            "docs": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Paths to directories to search for .md and .mdc documentation files to auto-include"
            }
          },
          "additionalProperties": false
        },
        "autoexamples": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "find": {
                    "type": "string",
                    "description": "String to search for in the prompt to trigger this example."
                  },
                  "example": {
                    "type": "string",
                    "description": "Example string to pass as --example argument when find matches."
                  }
                },
                "required": [
                  "find",
                  "example"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "models": {
          "type": "object",
          "properties": {
            "execution": {
              "type": "string",
              "description": "Model spec for rmplan run model"
            },
            "answerPr": {
              "type": "string",
              "description": "Model spec for rmplan answer-pr model"
            },
            "convert_yaml": {
              "type": "string",
              "description": "Model spec for rmplan markdown-to-yaml extraction"
            }
          },
          "additionalProperties": false
        },
        "defaultExecutor": {
          "type": "string",
          "default": "copy-only",
          "description": "Default executor to use for plan execution"
        },
        "workspaceCreation": {
          "type": "object",
          "properties": {
            "repositoryUrl": {
              "type": "string"
            },
            "cloneLocation": {
              "type": "string"
            },
            "postCloneCommands": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "command": {
                    "type": "string"
                  },
                  "workingDirectory": {
                    "type": "string"
                  },
                  "env": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "allowFailure": {
                    "type": "boolean",
                    "default": false
                  },
                  "hideOutputOnSuccess": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": [
                  "title",
                  "command"
                ],
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "description": "Repository-level configuration for rmplan"
    }
  }
}
