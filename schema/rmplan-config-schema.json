{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Repository-level configuration for rmplan",
  "type": "object",
  "properties": {
    "issueTracker": {
      "description": "Issue tracking service to use for import commands and issue-related operations",
      "default": "github",
      "type": "string",
      "enum": [
        "github",
        "linear"
      ]
    },
    "postApplyCommands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "workingDirectory": {
            "type": "string"
          },
          "env": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          "allowFailure": {
            "default": false,
            "type": "boolean"
          },
          "hideOutputOnSuccess": {
            "default": false,
            "type": "boolean"
          }
        },
        "required": [
          "title",
          "command",
          "allowFailure",
          "hideOutputOnSuccess"
        ],
        "additionalProperties": false
      }
    },
    "paths": {
      "type": "object",
      "properties": {
        "tasks": {
          "description": "Path to directory containing task definitions",
          "type": "string"
        },
        "docs": {
          "description": "Paths to directories to search for .md and .mdc documentation files to auto-include",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "trackingFile": {
          "description": "Path to workspace tracking file (default: ~/.config/rmfilter/workspaces.json)",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "autoexamples": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "find": {
                "description": "String to search for in the prompt to trigger this example.",
                "type": "string"
              },
              "example": {
                "description": "Example string to pass as --example argument when find matches.",
                "type": "string"
              }
            },
            "required": [
              "find",
              "example"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "models": {
      "type": "object",
      "properties": {
        "execution": {
          "description": "Model spec for rmplan run model",
          "type": "string"
        },
        "answerPr": {
          "description": "Model spec for rmplan answer-pr model",
          "type": "string"
        },
        "convert_yaml": {
          "description": "Model spec for rmplan markdown-to-yaml extraction",
          "type": "string"
        },
        "stepGeneration": {
          "description": "Model spec for rmplan prepare phase generation",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "answerPr": {
      "type": "object",
      "properties": {
        "mode": {
          "description": "Default mode for answer-pr command",
          "type": "string",
          "enum": [
            "hybrid",
            "inline",
            "separate"
          ]
        },
        "comment": {
          "description": "Default value for whether to add comments after processing",
          "type": "boolean"
        },
        "commit": {
          "description": "Default value for whether to commit changes after processing",
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "modelApiKeys": {
      "description": "Map of model ID or prefix to environment variable name for API key. Example: {\"openai/\": \"MY_OPENAI_KEY\", \"anthropic/claude-3.5-sonnet\": \"CLAUDE_SONNET_KEY\"}",
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "description": "Environment variable name to use for API key",
        "type": "string"
      }
    },
    "defaultExecutor": {
      "description": "Default executor to use for plan execution",
      "type": "string"
    },
    "workspaceCreation": {
      "type": "object",
      "properties": {
        "repositoryUrl": {
          "type": "string"
        },
        "cloneLocation": {
          "type": "string"
        },
        "postCloneCommands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "workingDirectory": {
                "type": "string"
              },
              "env": {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {
                  "type": "string"
                }
              },
              "allowFailure": {
                "default": false,
                "type": "boolean"
              },
              "hideOutputOnSuccess": {
                "default": false,
                "type": "boolean"
              }
            },
            "required": [
              "title",
              "command",
              "allowFailure",
              "hideOutputOnSuccess"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "instructions": {
      "description": "Paths to custom instruction documents",
      "type": "object",
      "properties": {},
      "additionalProperties": false
    },
    "planning": {
      "type": "object",
      "properties": {
        "direct_mode": {
          "description": "Default behavior for direct mode in generate and prepare commands",
          "type": "boolean"
        },
        "instructions": {
          "description": "Path to a planning document file to include in all planning prompts",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "agents": {
      "description": "Custom instructions for implementer, tester, and reviewer agents",
      "type": "object",
      "properties": {
        "implementer": {
          "type": "object",
          "properties": {
            "instructions": {
              "description": "Path to custom instructions file for the implementer agent",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "tester": {
          "type": "object",
          "properties": {
            "instructions": {
              "description": "Path to custom instructions file for the tester agent",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "reviewer": {
          "type": "object",
          "properties": {
            "instructions": {
              "description": "Path to custom instructions file for the reviewer agent",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "executors": {
      "description": "Options for each executor",
      "type": "object",
      "properties": {
        "claude-code": {
          "type": "object",
          "properties": {
            "allowedTools": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "allowAllTools": {
              "type": "boolean"
            },
            "includeDefaultTools": {
              "default": true,
              "type": "boolean"
            },
            "disallowedTools": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "mcpConfigFile": {
              "type": "string"
            },
            "interactive": {
              "type": "boolean"
            },
            "permissionsMcp": {
              "description": "Configuration for the permissions MCP server",
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "defaultResponse": {
                  "type": "string",
                  "enum": [
                    "yes",
                    "no"
                  ]
                },
                "timeout": {
                  "description": "Timeout in milliseconds for permission prompts",
                  "type": "number"
                },
                "autoApproveCreatedFileDeletion": {
                  "description": "When enabled, automatically approve deletion of files created or modified by the agent in the current session",
                  "default": false,
                  "type": "boolean"
                }
              },
              "required": [
                "enabled"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "copy-only": {
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "copy-paste": {
          "type": "object",
          "properties": {
            "executionModel": {
              "description": "The model string for LLM execution, e.g., 'google/gemini-2.5-pro'.",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "direct-call": {
          "type": "object",
          "properties": {
            "executionModel": {
              "description": "The model string for LLM execution, e.g., 'google/gemini-2.5-pro'.",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
