{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Repository-level configuration for rmplan",
  "type": "object",
  "properties": {
    "postApplyCommands": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "workingDirectory": {
            "type": "string"
          },
          "env": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "string"
            }
          },
          "allowFailure": {
            "default": false,
            "type": "boolean"
          },
          "hideOutputOnSuccess": {
            "default": false,
            "type": "boolean"
          }
        },
        "required": [
          "title",
          "command",
          "allowFailure",
          "hideOutputOnSuccess"
        ],
        "additionalProperties": false
      }
    },
    "paths": {
      "type": "object",
      "properties": {
        "tasks": {
          "description": "Path to directory containing task definitions",
          "type": "string"
        },
        "docs": {
          "description": "Paths to directories to search for .md and .mdc documentation files to auto-include",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "trackingFile": {
          "description": "Path to workspace tracking file (default: ~/.config/rmfilter/workspaces.json)",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "autoexamples": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "properties": {
              "find": {
                "description": "String to search for in the prompt to trigger this example.",
                "type": "string"
              },
              "example": {
                "description": "Example string to pass as --example argument when find matches.",
                "type": "string"
              }
            },
            "required": [
              "find",
              "example"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "models": {
      "type": "object",
      "properties": {
        "execution": {
          "description": "Model spec for rmplan run model",
          "type": "string"
        },
        "answerPr": {
          "description": "Model spec for rmplan answer-pr model",
          "type": "string"
        },
        "convert_yaml": {
          "description": "Model spec for rmplan markdown-to-yaml extraction",
          "type": "string"
        },
        "stepGeneration": {
          "description": "Model spec for rmplan prepare phase generation",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "defaultExecutor": {
      "description": "Default executor to use for plan execution",
      "default": "copy-only",
      "type": "string"
    },
    "workspaceCreation": {
      "type": "object",
      "properties": {
        "repositoryUrl": {
          "type": "string"
        },
        "cloneLocation": {
          "type": "string"
        },
        "postCloneCommands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "workingDirectory": {
                "type": "string"
              },
              "env": {
                "type": "object",
                "propertyNames": {
                  "type": "string"
                },
                "additionalProperties": {
                  "type": "string"
                }
              },
              "allowFailure": {
                "default": false,
                "type": "boolean"
              },
              "hideOutputOnSuccess": {
                "default": false,
                "type": "boolean"
              }
            },
            "required": [
              "title",
              "command",
              "allowFailure",
              "hideOutputOnSuccess"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "defaultExecutor"
  ],
  "additionalProperties": false
}
