# GitHub Configuration (Required)
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Discord Configuration (Required)
DISCORD_TOKEN=your_discord_token

# Database Configuration (Required)
DATABASE_PATH=./bot_database.sqlite

# Workspace Configuration (Required)
WORKSPACE_BASE_DIR=./bot_workspaces

# Logging Configuration
LOG_RETENTION_DAYS=30  # Default: 30 days
LOG_LEVEL=info  # Options: debug, info, warn, error

# Server Configuration
BOT_SERVER_PORT=3000  # Default: 3000

# Optional Configuration
PLANNING_MODEL=google/gemini-2.5-pro-latest  # Model for plan generation
DISCORD_DEFAULT_CHANNEL_ID=your_default_channel_id  # Default channel for notifications

# Admin Configuration
# Comma-separated list of Discord user IDs with admin privileges
ADMIN_DISCORD_USER_IDS=123456789012345678,987654321098765432

# Model Configuration (for rmplan commands)
GOOGLE_GENERATIVE_AI_API_KEY=your_api_key  # Required for plan extraction